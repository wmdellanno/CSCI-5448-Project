/*@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@
 File:    Board.java
 Date:    6/4/10
 Author:  Bill Dell'Anno
 Purpose: Creates a board object with an array of 7 column objects
 @@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@*/


public class Board {

    private Column[] columns;

    public Board() {
        for (Column c : columns) {
            c = new Column();
        }
    }

    public Column getColumn(int col) {
        return columns[col];
    }

}
