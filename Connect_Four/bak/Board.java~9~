public class Board {

    private Column[] columns = new Column[7];
    private int[][] grid = new int[7][6];

    public Board() {
        for (Column c : columns) {
            c = new Column();
        }
    }

    /*
        public Board() {
            for (int i = 0; i < grid.length; i++) {
                for (int k = 0; k < grid[i].length; k++) {
                    grid[i][k] = 0;
                }
            }
        }
     */

    public Column getColumn(int col) {
        return columns[col];
    }

}
